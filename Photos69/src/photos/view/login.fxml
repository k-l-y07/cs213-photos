<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="photos.controller.LoginController"
      alignment="CENTER"
      spacing="10">
    <padding><Insets top="20" left="20" bottom="20" right="20"/></padding>

    <Label text="Photos" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    <Label text="Enter username to log in (admin for admin panel):"/>
    <TextField fx:id="usernameField" promptText="Username" maxWidth="220"/>
    <Button text="Login" onAction="#handleLogin" maxWidth="220"/>
</VBox>
