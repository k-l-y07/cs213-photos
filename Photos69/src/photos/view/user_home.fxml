<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="photos.controller.UserHomeController"
      spacing="8">
    <padding><Insets top="12" left="12" bottom="12" right="12"/></padding>

    <HBox alignment="CENTER_LEFT" spacing="8">
        <Label text="Your Albums" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button text="Search" onAction="#handleSearch"/>
        <Button text="Logout" onAction="#handleLogout"/>
    </HBox>

    <TableView fx:id="albumsTable" prefHeight="320">
        <columns>
            <TableColumn fx:id="nameCol" text="Album" prefWidth="220"/>
            <TableColumn fx:id="countCol" text="# Photos" prefWidth="90"/>
            <TableColumn fx:id="rangeCol" text="Date Range" prefWidth="280"/>
        </columns>
    </TableView>

    <HBox alignment="CENTER_RIGHT" spacing="8">
        <Button text="Add" onAction="#handleAdd"/>
        <Button text="Rename" onAction="#handleRename"/>
        <Button text="Delete" onAction="#handleDelete"/>
        <Button text="Open" onAction="#handleOpen"/>
    </HBox>
</VBox>
